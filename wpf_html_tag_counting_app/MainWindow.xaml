<Window x:Class="wpf_html_tag_counting_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_html_tag_counting_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
            <Button x:Name="button_open" Content="Open file" HorizontalAlignment="Center" VerticalAlignment="Top" Height="54" Width="204" FontSize="30" Click="ButtonOpenClick" Margin="0,243,0,0"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,37,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="121" Width="780" />
            <Button x:Name="button_cancel" Content="Cancel" HorizontalAlignment="Center" Margin="0,329,0,0" VerticalAlignment="Top" Height="50" Width="204" FontSize="30" Click="ButtonCancelClick"/>
            <ProgressBar HorizontalAlignment="Center" Height="40" Margin="0,177,0,0" VerticalAlignment="Top" Width="700"/>
    </Grid>
</Window>
